<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        tools:context=".MonkeySettingsActivity">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="6dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/app_icon_field_setting"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="80dp"
        android:paddingTop="10dp"
        android:text=""
        android:textSize="15dp"
        android:textColor="@android:color/widget_edittext_dark"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:id="@+id/app_name_field_setting"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="540dp"
        android:id="@+id/monkey_settings_listView"
        android:layout_below="@+id/app_icon_field_setting"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/back_monkey_setting"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="550dp"
        android:layout_marginStart="20dp"
        android:layout_below="@id/app_name_field_setting"
        android:text="Back"
        android:drawableLeft="@drawable/back"
        android:background="#00000000"/>

    <Button
        android:id="@+id/run_monkey"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="550dp"
        android:layout_marginStart="290dp"
        android:gravity="center"
        android:layout_below="@id/app_name_field_setting"
        android:text="Start"
        android:drawableLeft="@drawable/run"
        android:background="#00000000"/>

</RelativeLayout>
