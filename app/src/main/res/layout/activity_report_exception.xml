<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ReportActivity">

    <ImageView
        android:id="@+id/app_icon_field_report_exception"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:padding="6dp" />

    <TextView
        android:id="@+id/app_name_field_report_exception"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="10dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:paddingTop="10dp"
        android:text=""
        android:textColor="@android:color/widget_edittext_dark"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/all_info_report_exception"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="70dp"
        android:text="General"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimaryDark"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/anr_report_exception"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="70dp"
        android:layout_marginStart="130dp"
        android:text="ANR"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimaryDark"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/exception_report_exception"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="70dp"
        android:layout_marginStart="240dp"
        android:text="Exception"
        android:textAlignment="center"
        android:textColor="@android:color/widget_edittext_dark"
        android:textSize="20sp" />

    <ScrollView
        android:id="@+id/report_content_scroller_exception"
        android:layout_width="match_parent"
        android:layout_height="435dp"
        android:layout_marginTop="110dp"
        android:scrollbars="horizontal">

        <TextView
            android:id="@+id/report_content_exception"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:paddingBottom="15dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:text=""
            android:textColor="@android:color/widget_edittext_dark"
            android:textSize="15sp" />
    </ScrollView>

    <Button
        android:id="@+id/back_monkey_report_exception"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@id/app_name_field_report"
        android:layout_marginStart="20dp"
        android:layout_marginTop="500dp"
        android:background="#00000000"
        android:drawableLeft="@drawable/back"
        android:text="Back" />

    <Button
        android:id="@+id/export_report_exception"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@id/app_name_field_report"
        android:layout_marginStart="290dp"
        android:layout_marginTop="500dp"
        android:background="#00000000"
        android:drawableLeft="@drawable/save"
        android:text="Export results" />

</RelativeLayout>
